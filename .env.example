# Firebase Configuration (Client-side)
# ローカル開発時はNEXT_PUBLIC_を使用
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIRESTORE_DB_NAME=

# Firebase Configuration (Server-side / Admin SDK)
FIREBASE_PROJECT_ID=
FIRESTORE_DB_NAME=

# Firebase Client Config for Cloud Run
# Cloud Runではビルド時にNEXT_PUBLIC_が埋め込まれないため、
# サーバーサイドで読み取ってクライアントに注入する用の環境変数
FIREBASE_CLIENT_API_KEY=
FIREBASE_CLIENT_AUTH_DOMAIN=
FIREBASE_CLIENT_STORAGE_BUCKET=
FIREBASE_CLIENT_MESSAGING_SENDER_ID=
FIREBASE_CLIENT_APP_ID=

# デフォルトの子供ID（開発用）
NEXT_PUBLIC_DEFAULT_CHILD_ID=child1